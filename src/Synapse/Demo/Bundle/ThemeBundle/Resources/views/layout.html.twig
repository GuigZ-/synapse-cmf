<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    {% block meta %}
      <meta name="description" content="">
      <meta name="author" content="">

      <title>Synapse demo template</title>
    {% endblock %}

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="http://v4-alpha.getbootstrap.com/dist/css/bootstrap.min.css">

    <!-- Custom styles for this template -->
    <link href="http://v4-alpha.getbootstrap.com/examples/jumbotron/jumbotron.css" rel="stylesheet">
  </head>

  <body>

    <nav class="navbar navbar-static-top navbar-light bg-faded">
      <a class="navbar-brand" href="http://demo.synapse.dev/demo_dev.php/fr/">Synapse Demo</a>
      <ul class="nav navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="http://demo.synapse.dev/demo_dev.php/fr/">Home</a>
        </li>
      </ul>
    </nav>

    <div class="container-fluid" style="padding: 0;">

      {% block top %}

        <div class="top">
          {{ synapse_zone('top') }}
        </div>

      {% endblock %}

    </div>

    {% block jumbotron %}

      <div class="jumbotron">
        <div class="container">
          {{ synapse_zone('jumbotron') }}
        </div>
      </div>

    {% endblock %}

    <div class="container">
      {% block content %}

        <div class="row">
          {{ synapse_zone('content') }}
        </div>

      {% endblock %}
    </div>

    <br>
    <hr>
    <br>

    <footer>
      <div class="container">
        <div class="row">
          {{ synapse_zone('footer') }}
        </div>
      </div>
    </footer>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="../../assets/js/vendor/jquery.min.js"><\/script>')</script>
    <script src="http://v4-alpha.getbootstrap.com/dist/js/bootstrap.min.js"></script>
  </body>
</html>
